<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.MainActivity"
    android:background="#1E9907">


    <Button
        android:id="@+id/main_cat_btn1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:onClick="goToCat1"
        android:text="SMART MEGA CONCERTS"
        tools:ignore="ContentDescription,HardcodedText"
        tools:layout_editor_absoluteY="102dp"
        tools:layout_editor_absoluteX="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/main_cat_btn2"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:text="MOVIES"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@+id/main_cat_btn1"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/main_cat_btn3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="SOCIAL EVENT"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/main_cat_btn1"
        android:layout_alignStart="@+id/main_cat_btn1" />

    <Button
        android:id="@+id/main_cat_btn4"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="SMART MUSIC"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_alignTop="@+id/main_cat_btn3"
        android:layout_alignStart="@+id/main_cat_btn2"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorPrimary"
        android:fontFamily="casual"
        android:text="BuyFromUs"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />
</RelativeLayout>
